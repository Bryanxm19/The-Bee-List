<div class="">
  <h1>Categories List</h1>
  <div class="">
    <% @categories.each do |category| %>
      <div class="">
        <h2><a href="/categories/<%=category.id%>"><%= category.name %></a></h2>
        <h4>Top Picks</h4>
        <ul>
          <% category.top_five_goals.each do |goal| %>
            <li><a href="/goals/<%= goal.id %>"><%= goal.task %></a></li>
              <%= link_to "Add to Goals", goals_users_path(goal_id: goal.id), method: :post%>
            <br>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>
</div>
