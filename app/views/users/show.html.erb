<% if logged_in? %>
  <div id="w">
  <% if @user.id == current_user.id %>
    <div id="content" class="cleafix">
    <% if !!@user.first_name %>
      <h1>Welcome Back, <%= @user.first_name %></h1>
    <% else %>
      <h1>Welcome Back!</h1>
    <% end %>
    <br>
    <nav id="profiletabs">
      <ul class="clearfix">
        <li><a href="#uncomplete-goals" class="sel">Goals to Complete</a></li>
        <li><a href="#finished-goals">Finished Goals</a></li>
        <li><a href="#friends">Friends</a></li>
      </ul>
    </nav>
    <section id="uncomplete-goals">
      <% @categories.each do |category| %>
        <h2><a href="/categories/<%= category.id %>"><%=category.name %></a></h2>
        <% category.display_current_user_goals(@user).each do |goal| %>
          <ul>
          <li><a href="/goals/<%= goal.id %>"><%= goal.task %></a> | <%= link_to 'Complete', goals_user_path(goal.id, completed: true), method: :put %> | <%= link_to "Remove", goals_user_path(goal.id), method: :delete%></li>
          </ul>
        <% end %>
      <% end %>
    </section>

    <section id="finished-goals" class="hidden">
      <br>
      <% @categories.each do |category| %>
        <% category.display_completed_user_goals(@user).each do |goal| %>
          <ul>
            <li><a href="/goals/<%= goal.id %>"><%= goal.task %></a></li>
            </ul>
        <% end %>
      <% end %>
    </section>

    <section id="friends" class="hidden">
      <%= render 'users/friends_feed' %>
    </section>
    </div>
  </div>
  <% else %>
    <div id="w">
      <div id="content" class="clearfix">
        <h1><%= @user.username.capitalize %>'s Profile</h1>
        <% if current_user.is_friends_with?(@user) %>
          <%= link_to "Unfriend", connection_path(current_user.connection(@user), user_id: @user.id),
              method: :delete %>
      <br><br>
      <nav id="profiletabs">
        <ul class="clearfix">
          <li><a href="#uncomplete-goals" class="sel">Goals to Complete</a></li>
          <li><a href="#finished-goals">Finished Goals</a></li>
          <li><a href="#friends">Friends</a></li>
        </ul>
      </nav>
      <section id="uncomplete-goals">
        <% @categories.each do |category| %>
          <h2><a href="/categories/<%= category.id %>"><%=category.name %></a></h2>
          <% category.display_current_user_goals(@user).each do |goal| %>
            <ul>
            <li><a href="/goals/<%= goal.id %>"><%= goal.task %></a><% if !current_user.goals.include?(goal) %> | <span><%= link_to "Add to Goals", goals_users_path(goal_id: goal.id), method: :post%></span><% end %></li>
            </ul>
          <% end %>
        <% end %>
      </section>
      <section id="finished-goals" class="hidden">
        <% @categories.each do |category| %>
            <% category.display_completed_user_goals(@user).each do |goal| %>
              <ul>
                <li><a href="/goals/<%= goal.id %>"><%= goal.task %></a></li>
              </ul>
            <% end %>
          <% end %>
      </section>
      <section id="friends" class="hidden">
        <%= render 'users/friends_feed' %>
      </section>
      <% else %>
      <br>
        <%= form_for Connection.new do |f| %>
          <%= hidden_field_tag "connection[friendee_id]", "#{@user.id}" %>
          <%= submit_tag("Add Friend") %>
        <% end %>
      <% end %>
    </div>
  <% end %>
  </div>
<% else %>
  <div class="row" id="profile-page">
    <h1>This is the profile page of <%= @user.username %></h1>
  </div>
<% end %>
</div>
