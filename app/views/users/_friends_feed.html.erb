<div id="friends-feed" class="row panel panel-primary">
  <div class="panel-heading">
    <div>
      <h4 class="friends-title-header">
        Friends (<%= @user.friends.count %>)
      </h4>
        <% if @user.id == current_user.id %>
          <button class="btn btn-primary friends-search-button" type="button" data-toggle="collapse" data-target="#collapseSearchBar" aria-expanded="false" aria-controls="collapseSearchBar">
            <span class="glyphicon glyphicon-search"></span>
          </button>
        <% end %>
    </div>

    <div class="collapse" id="collapseSearchBar">
        <form class="navbar-form" method="GET" action="/friend_search">
          <input type="text" name="search" class="form-control" placeholder="Search">
        <button type="submit" class="btn btn-default">Submit</button>
      </form>
    </div>
  </div>

  <div class="panel-body">
    <div class="friend-search-results">
      <% if @results %>
        <% if @results.length == 0 %>
          <div class="panel panel-default">
            <div class="panel-heading">
              <h4>No results</h4>
            </div>
          </div>
        <% else %>
          <div class="panel panel-default">
            <div class="panel-heading">
              <h4>Results</h4>
            </div>
            <ul class="list-group">
              <% @results.each do |result| %>
                <li class="list-group-item"><a href="/users/<%=result.id %>"><%=result.username %></a></li>
              <% end %>
            </ul>
          </div>
        <% end %>
      <% end %>
    </div>

    <ul class="list-group">
      <% @user.friends.each do |friend| %>
        <li class="list-group-item friends-list"><a href="/users/<%= friend.id %>"><%= friend.username %></a></li>
      <% end %>
    </ul>
  </div>
</div>
